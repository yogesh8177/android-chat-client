<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:textColor="#000"
            android:textSize="25dp"
            android:text="Title"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/delivery_date"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Delivery"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/read_date"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Read"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/label_delivered"
            android:text="Delivered to"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/read_date"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/delivered_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_delivered"/>

        <TextView
            android:id="@+id/label_read"
            android:text="Read by"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivered_list_recyclerview"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/read_list_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_read"/>

    </RelativeLayout>

</LinearLayout>
